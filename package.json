{
  "name": "pcc-puppet-enforcer",
  "version": "0.0.1",
  "description": "",
  "author": "yesid.bocanegra@pandino.co",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "update-dependencies": "ncu -u",
    "install:prod": "rm -rf node_modules && rm -rf package-lock.json && npm install --production --no-package-lock",
    "prune_me": "npm prune --production && node-prune && rimraf node_modules/rxjs/src && rimraf node_modules/rxjs/bundles && rimraf node_modules/rxjs/_esm*"
  },
  "dependencies": {
    "@nestjs/class-transformer": "0.4.0",
    "@nestjs/class-validator": "0.13.4",
    "@nestjs/common": "8.3.1",
    "@nestjs/core": "8.3.1",
    "@nestjs/platform-express": "8.3.1",
    "@nestjs/platform-fastify": "8.3.1",
    "aws-lambda-fastify": "^2.1.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "fastify-compress": "4.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.1",
    "@nestjs/schematics": "8.0.6",
    "@nestjs/testing": "8.3.1",
    "@types/aws-lambda": "^8.10.92",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.19",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "5.12.1",
    "aws-lambda": "^1.0.7",
    "eslint": "8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "jest": "27.5.1",
    "jest-sonar-reporter": "2.0.0",
    "npm-check-updates": "12.4.0",
    "plugin": "0.3.3",
    "prettier": "2.5.1",
    "serverless-offline": "8.5.0",
    "serverless-plugin-optimize": "4.2.1-rc.1",
    "serverless-plugin-typescript": "2.1.1",
    "source-map-support": "0.5.21",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-loader": "9.2.6",
    "ts-node": "10.5.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.5"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "../node_modules/",
      "../test/",
      "..(module).(ts|js)",
      "src/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
